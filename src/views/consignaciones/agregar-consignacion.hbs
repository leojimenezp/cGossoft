<script src="/resources/node_modules/chart.js/dist/Chart.min.js"></script>

{{>navigation}}

<div class="dt-content-wrapper">
    <div class="dt-content datos-planeacion">
        <div class="dt-page-header">

            <div class="row">
                <div class="col-md-4 col-xs-4"></div>
                <div class="col-md-4 col-xs-4"></div>
                <div class="col-md-4 col-xs-4">
                    <a href="/consignaciones/agregar/rubro" class="btn btn-primary">Agregar Rubro</a>
                </div>
            </div>

            <br>

           <form action="" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Fecha solicitud: </label>
                        <input name="titulo" type="datetime" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Monto solicitado: </label>
                        <input name="monto" type="number" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Nombre del beneficiario: </label>
                        <select name="nombre-beneficiario" class="form-control">
                            <option value="">nombre1</option>
                            <option value="">nombre2</option>
                            <option value="">nombre3</option>
                            <option value="">nombre4</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Cedula del beneficiario: </label>
                        <input name="cedula-beneficiario" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Servicio: </label>
                        <input name="servicio" type="text" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Placa de vehiculo: </label>
                        <input name="placa-vehiculo" type="text" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label>Descripcion: </label>
                        <textarea name="descripcion" class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <input type="submit" value="Agregar" class="btn btn-primary" style="width: 100%">
                    </div>
                </div>
           </form>

        </div>
    </div>
</div>